<!doctype html>
<html>
<head>
    <title>Fit Challenge</title>
    <!-- <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Jersey+10&display=swap"
      rel="stylesheet"
    />
    <script src="https://kit.fontawesome.com/66a5eab7b2.js" crossorigin="anonymous"></script>
    <link rel="icon" type="image/x-icon" href="/img/fit.svg" />
    <link rel="stylesheet" href="style.css">
</head>
<body>
<div class="container">
<div class="col-sm">

    <h1>Sign Up</h1>
    <!-- <h1><span class="fa fa-sign-in"></span> Sign Up</h1> -->

    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <!-- LOGIN FORM -->
    <form action="/signup" method="post">
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="email">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password">
        </div>

        <button type="submit" class="btn-lg">Sign Up</button>
    </form>

    <!-- <hr> -->

    <p>Already have an account? <a href="/login">Login</a></p>
    <p>Back to <a href="/">home</a></p>

</div>
</div>
</body>
</html>
